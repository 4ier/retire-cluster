# Retire-Cluster Docker Deployment Configuration
# Copy this file to .env and customize for your environment

# ============================================
# Basic Configuration
# ============================================

# Data storage path on host (NAS)
# Synology: /volume1/docker/retire-cluster
# QNAP: /share/Container/retire-cluster
DATA_PATH=/volume1/docker/retire-cluster

# Timezone (see https://en.wikipedia.org/wiki/List_of_tz_database_time_zones)
TZ=Asia/Shanghai

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ============================================
# Network Configuration
# ============================================

# Main node server port (exposed on host)
CLUSTER_PORT=8081

# Web dashboard port (exposed on host)
WEB_PORT=5001

# Optional: Bind to specific host IP (default: all interfaces)
# CLUSTER_HOST=192.168.1.100

# Docker network subnet
NETWORK_SUBNET=172.20.0.0/16

# ============================================
# Resource Limits
# ============================================

# CPU limits (2.0 = 2 cores)
CPU_LIMIT=2.0
CPU_RESERVATION=0.5

# Memory limits (format: 512M, 1G, 2G)
MEMORY_LIMIT=2G
MEMORY_RESERVATION=512M

# ============================================
# Optional: Nginx Proxy Configuration
# ============================================
# Uncomment to enable nginx proxy (use --profile with-proxy)

# PROXY_PORT=80
# PROXY_SSL_PORT=443

# ============================================
# Advanced Configuration
# ============================================

# Database configuration
# DATABASE_WAL_MODE=true
# DATABASE_CACHE_SIZE=10000

# Cluster settings
# HEARTBEAT_INTERVAL=60
# OFFLINE_THRESHOLD=300
# TASK_TIMEOUT=3600

# Security (future implementation)
# API_KEY_REQUIRED=false
# WEB_AUTH_ENABLED=false